<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPhoto"
        android:layout_margin="@dimen/default_margin"
        android:layout_width="@dimen/img_width_host_photo"
        android:layout_height="@dimen/img_height_host_photo"
        android:elevation="12dp"
        app:cardCornerRadius="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">

        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:id="@+id/ivGuestPhoto"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="TODO">
        </ImageView>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/cardViewPhoto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/middleText"
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/middleText"
            android:id="@+id/tvUserSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />





    </LinearLayout>


</RelativeLayout>