<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="@string/user_info"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <include layout="@layout/item_option" android:id="@+id/viewSurname"/>

    <include layout="@layout/item_option" android:id="@+id/viewEmail"/>

    <include layout="@layout/item_option" android:id="@+id/viewBio"/>

    <include layout="@layout/item_option" android:id="@+id/viewPhoneNumber"/>

    <include layout="@layout/item_option" android:id="@+id/viewUserBirthDay"/>

    <include layout="@layout/item_option" android:id="@+id/viewUserWallet"/>

</LinearLayout>